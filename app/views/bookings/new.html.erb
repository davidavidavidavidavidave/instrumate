<div class="text-container">
  <h1>New Booking</h1>

  <div class = "d-flex justify-content-between", style="margin-bottom: 24px;">
    <div class="row align-items-start">
      <%= simple_form_for ([@instrument, @booking]) do |f| %>
        <div class="col-12">
          <%= f.input :start_date, order: [:day, :month, :year], as: :date , html5: true %>
          </div>
            <div class="col-12">
              <%= f.input :end_date, order: [:day, :month, :year], as: :date , html5: true %>
            </div>
          <%= f.submit "Create Booking", class: "btn btn-flat" %>
          <% end %>
        </div>
      </div>
      <div class="card-trip", style="background-image: linear-gradient(rgba(0,0,0,0.3);, rgba(0,0,0,0.3));, margin-bottom: 24px;">
        <img src= "https://source.unsplash.com/random/?<%=@instrument.name%>">
      </div>
      <%= link_to "View more instruments", instruments_path %>
  </div>
