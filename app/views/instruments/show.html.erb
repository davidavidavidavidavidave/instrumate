<div class="text-container">
  <h1><%= "What a great #{@instrument.name} 😎"%></h1>
    <div class="card-trip">
        <img src= "https://source.unsplash.com/random/?<%=@instrument.name%>">
      <div class="card-trip-infos">
        <div>
          <h2><%= @instrument.name %></h2>
          <p><%= @instrument.description %></p>
          <p><%= link_to "Book this #{@instrument.name}", new_instrument_booking_path(@instrument, @booking), class: "btn btn-flat"%> </p>
        </div>
        <h2 class="card-trip-pricing"><%= "£#{@instrument.price}"  %></h2>
        <%= image_tag "to_11.jpg", class: "card-trip-user avatar-bordered"%>
      </div>
    </div>
  <div class="mini-map" data-controller="map"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      data-map-markers-value="<%= [{ lat: @instrument.latitude, lng: @instrument.longitude, info_window: @instrument.name }].to_json %>"
      data-instrument-id="<%= @instrument.id %>"
      style='width: 100%; height: 400px; margin-top: 16px;'>
  </div>
</div>
